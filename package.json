{
  "name": "glob3d",
  "description": "A 3D globe visualization library based on Three.js",
  "author": "Jakub Chojna",
  "license": "MIT",
  "version": "0.5.0",
  "type": "module",
  "main": "./dist/glob3d.umd.cjs",
  "module": "./dist/glob3d.js",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/glob3d.js",
      "require": "./dist/glob3d.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:cov": "vitest --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@types/three": "^0.162.0",
    "@vitest/coverage-v8": "^1.5.0",
    "eslint": "^8.57.0",
    "globals": "^15.0.0",
    "happy-dom": "^14.7.1",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.7.1",
    "vite": "^5.2.0",
    "vitest": "^1.5.0"
  },
  "peerDependencies": {
    "h3-js": "^4.1.0",
    "three": "^0.162.0",
    "three-conic-polygon-geometry": "^1.6.3"
  }
}
